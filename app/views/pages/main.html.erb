<h1>Intro 10</h1>

<%= form_with url: "/new", method: :post do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :hobby, "Hobby" %>
  <%= form.text_field :hobby %>


  <%= form.submit "Submit" %>
<% end %>
<table>

  <tr>
    <th><%= "Name" %></th>
    <th><%= "Hobby" %></th>
  </tr>

  <% Student.all.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.hobby %></td>
    </tr>
  <% end %>

</table>
<%= Student.all %> <br>

<%= Student.count %> <br>

<%= Student.last %><br>

<a href="/">Back to all students</a>





